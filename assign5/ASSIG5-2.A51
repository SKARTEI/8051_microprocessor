;
	ORG 4000H
;
	SETB P3.2
START:
	MOV R0, #0
	MOV DPTR, #5000H
;
LOOP1: 
	MOV A, P3
	ANL A, #00000100B
	JNZ LOOP1
	CLR A
	MOVX A, @DPTR
	MOV P1, A
	INC DPTR
	INC R0
	CALL SELE
;
LOOP2:
	MOV A, P3
	ANL A, #00000100B
	JZ LOOP2
	SJMP LOOP1
;
SELE: 
	MOV A, R0
	SUBB A, #6
	JNC START
	RET
;
	ORG 5000H
TDATA: DB 7EH, 0BDH, 0DBH, 0E7H, 0DBH, 0BDH
	END