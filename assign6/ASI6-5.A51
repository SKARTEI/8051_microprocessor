	ORG 4000H
	SJMP START
;
	ORG 400BH
	SJMP LIGHT
;
START: 
	MOV TMOD, #00000001B
	MOV TH0, #93H
	MOV TL0, #0FEH
;
	SETB ET0
	SETB EA
	MOV A, #0
	MOV R2, #0
	MOV P1, A
	SETB TR0
LOOP:
	SJMP LOOP
;
LIGHT:
	CLR TR0
	INC R2
	CJNE R2, #100, OVERLOOK
	MOV R2, #0
	SETB TR0
	CPL A
	MOV P1, A
	RETI
;
OVERLOOK:
	CALL DELAY
	SETB TR0
	RETI
;
DELAY:
	JNZ OFF
	MOV TH0, #93H
	MOV TL0, #0FEH
	RET
;
OFF:
	MOV TH0, #0B7H
	MOV TL0, #0FFH
	RET
;
	END